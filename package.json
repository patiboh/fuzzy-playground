{
  "name": "fuzzy-playground",
  "description": "An evolving environment to play, experiment and learn about web graphics and user interfaces",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "lint-css": "stylelint 'src/**/*.scss'",
    "lint-css:fix": "stylelint 'src/**/*.scss' --fix",
    "lint-js": "eslint src --ext mjs,svelte,js,ts,json,jsonl",
    "lint-js:fix": "eslint src --ext mjs,svelte,js,ts,json,jsonl --fix",
    "lint": "npm run lint-js && npm run lint-css",
    "lint:fix": "npm run lint-js:fix && npm run lint-css:fix",
    "pre-commit-lint": "npm run lint:fix -- --staged",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "autoprefixer": "^9.8.5",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "sapper": "^0.27.0",
    "sass": "^1.26.10",
    "standardx": "^5.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.0.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,md,mjs,svelte,ts,json,jsonl}": [
      "npm run lint-js:fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss}": [
      "npm run lint-css:fix",
      "prettier --write"
    ]
  }
}
