{
  "name": "@fat-fuzzy/fuzzy-playground",
  "author": "Patricia Boh",
  "description": "An evolving environment to play, experiment and learn about web graphics and user interfaces",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/patiboh/fuzzy-playground.git"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build",
    "export": "sapper export",
    "start": "node __sapper__/build",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:css:fix": "stylelint 'src/**/*.scss' --fix",
    "lint:js": "eslint src --ext mjs,svelte,js,ts,json,jsonl",
    "lint:js:fix": "eslint src --ext mjs,svelte,js,ts,json,jsonl --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "pre-commit-lint": "npm run lint:fix -- --staged",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "@rollup/plugin-url": "6.0.0",
    "compression": "^1.7.4",
    "polka": "next",
    "sirv": "^1.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/runtime": "^7.13.10",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "autoprefixer": "^10.2.5",
    "cucumber": "^6.0.5",
    "cypress": "^6.6.0",
    "cypress-cucumber-preprocessor": "^4.0.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "8.2.8",
    "prettier": "2.2.1",
    "prettier-plugin-svelte": "2.2.0",
    "rollup": "^2.41.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.1",
    "sass": "^1.32.8",
    "standardx": "^7.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "svelte": "^3.35.0",
    "svelte-preprocess": "^4.6.9"
  },
  "merge-configs": {
    "rollup": {
      "scripts": {
        "build": "sapper build --legacy",
        "export": "sapper export --legacy"
      },
      "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0",
        "@babel/plugin-transform-runtime": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/runtime": "^7.0.0",
        "@rollup/plugin-babel": "^5.0.0",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-replace": "^2.4.0",
        "@rollup/plugin-url": "^5.0.0",
        "rollup": "^2.3.4",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,md,mjs,svelte,ts,json,jsonl}": [
      "npm run lint:js:fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss}": [
      "npm run lint:css:fix",
      "prettier --write"
    ],
    "cypress": [
      "npm run cy:run"
    ]
  }
}
